header 
    background: colorHeader
    width 100%
    height 60px
    display: flex

    .nav
        display: flex

        .menu
            // height 20px
            margin: 9px
            border: 1px solid grayClaro
            border-radius: 4px
            padding: 8px

            div
                background: url("../images/png/menu.png") 100%
                height 25px
                width: 25px
                background-position: center

        &-logo
            background-size: 401px;
            background-image: url(../images/png/nav-sprite-global_bluebeacon-1x_optimized_layout1._CB468670774_.png);
            width: 150px;
            background-position: 257px 290px;

        &-left-input
            width 768px
            height 35px
            display: flex
            margin: auto 16px

            input 
                width 86%
                height 100%
                border 0
                outline: 0 !important

                &:focus
                    outline: 0

        &-filtros
            width: 7%;
            height: 100%;
            background-color: grayClaro;
            border-radius: 4px 0px 0px 4px
            display: flex;
            justify-content: center;
            align-items: center;
            cursor pointer

            img
                width: 10px;
                opacity: 0.6;
                margin-left: 3px;
        
        &-buscar
            width: 7%;
            height: 100%;
            background-color: colorPrimario;
            border-radius: 0px 4px 4px 0px;
            display: flex
            justify-content: center;
            align-items: center;
            cursor pointer

            img
                height: 22px

        &-idioma
            width: 40px;
            height: 40px;
            margin: auto;
            display: flex
            justify-content: center
            align-items: center
            cursor pointer

            img
                width: 24px

                &:nth-child(2)
                    width: 10px
                    margin: 4px
            
        &-login
            color: colorClaro
            width: 90px
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 8px;

            p
                font-size: 11px
                color: grayClaro

                strong 
                    font-size: 13px
                    color: colorClaro

        &-pedido
            width: 85px;
            // margin-left: 10px;
            color: colorClaro;
            height 45%
            margin: auto 10px

            p
                font-size: 11px
                color: grayClaro

                strong 
                    font-size: 13px
                    color: colorClaro

        &-carrito
            color: grayClaro;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            height: 74%;
            margin: auto;

            img
                height 40px